---
import type { ArticleType } from "../utils/types";

interface Props {
  article: ArticleType;
}

const { article } = Astro.props;
---

<article class="max-w-md mx-auto mt-10">
  <div class="bg-white rounded-lg overflow-hidden shadow-lg">
    <a href={`/articles/${''}`}>
      <img
        src={article.image}
        alt="Article Image"
        class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
      />
    </a>
    <div class="p-6">
      <h2 class="text-2xl font-semibold mb-2">
        <a href="article.html"> {article.title} </a>
      </h2>
      <p class="text-gray-600 text-sm mb-4">{article.date}</p>
      <div class="flex flex-wrap gap-2">
        {
          article.tags.map((tag: string, i) => (
            <span
              class={`px-2 py-1 ${i === 0 ? "bg-blue-500" : "bg-purple-500"} text-white rounded-full text-xs hover:opacity-90`}
            >
              <a href="">{tag}</a>
            </span>
          ))
        }
      </div>
    </div>
  </div>
</article>
