---
import type { CollectionEntry } from "astro:content";
import { formatDate } from "../utils/functions";
import type { ArticleType } from "../utils/types";
import Tags from "./Tags.astro";

interface Props {
  article: CollectionEntry<'blog'>;
}

const { article } = Astro.props;
---

<article class="mx-auto mt-10 max-w-md">
  <div class="overflow-hidden rounded-lg bg-white shadow-lg">
    <a href={`/articles/${article.slug}`}>
      <img
        src={`/images/${article.data.image}`}
        alt="Article Image"
        class="h-48 w-full object-cover transition duration-300 ease-in-out hover:opacity-75"
      />
    </a>
    <div class="p-6">
      <h2 class="mb-2 text-2xl font-semibold">
        <a href={`/articles/${article.slug}`}> {article.data.title} </a>
      </h2>
      <p class="mb-4 text-sm text-gray-600">{formatDate(article.data.pubDate)}</p>
      <Tags tags={article.data.tags} />
    </div>
  </div>
</article>
